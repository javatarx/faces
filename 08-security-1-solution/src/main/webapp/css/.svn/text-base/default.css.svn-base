html, body {
	font-family: Verdana;
	font-size: 8pt;
}

.ERROR {
	color: red;
	border-width : 1px;
	border-color: red;
	border-style: solid;
	text-align:center;
	margin: 2px;
}

.SUCCESS {
	color: green;
	border-width : 1px;
	border-color: green;
	border-style: solid;
	text-align:center;
	margin: 2px;
}

.rich-message-label {
	color: red;
}

li div {
    margin-bottom: 0;
}

li div p {
    margin: 0 0 5px 0;
}

div.left{
    margin-right: 2px !important;
}

div.left[class]{
    margin-right: 4px !important;
}

div.left img{
    margin: 0 0 -2px 0;
}